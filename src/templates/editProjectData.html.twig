<!DOCTYPE html>
<html lang="en">
    <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Document</title>
      <style>
       label.error {
       display: block;
       color: red;
			}
		</style>

	</head>

	<body>
		<header>
			<div class="container-fluid ">
				<div class="row justify-content-end">

					<div class="col-md-10">
						<form id="editProjectform" method="POST" enctype="multipart/form-data">
								<h2 class="text-center" style="color:blue">Edit Project Data
							</h2>
							<div class="form-group">
								{% for projectId in value %}
									<label for="Project_name" class="form-label">Project_name</label>
									<font color="red">*</font><input type="text" class="form-control" id="Project_name" name="project_name" value="{{projectId.project_name}}">
								</div>
								<div class="form-group">
									<label for="Project_number" class="form-label">Project_number</label>
									<font color="red">*</font>
									<input type="text" class="form-control" id="Project_number" name="project_number" value="{{projectId.project_number}}">
								</div>
								<div class="form-group">
									<label for="address">Address:</label>
									<font color="red">*</font>
									<input type="text" class="form-control" name="address" id="address" value="{{projectId.address}}"
								</div>
								<div class="form-group">
									<label for="start_date" class="form-label">Start_date :</label>
									<font color="red">*</font><input type="date" class="form-control" id="start_date" name="start_date" value="{{projectId.start_date}}">
								</div>
								<div class="form-group">
									<label for="end_date" class="form-label">End_date :</label>
									<font color="red">*</font><input type="date" class="form-control" id="end_date" name="end_date" value="{{projectId.end_date}}">
								</div>
							{% endfor  %}
							<br>
							<input type="submit" class="btn btn-primary" name="update" value="update">
						</form>
					</div>
				</div>
			</div>
		</header>
	</body>

</html>
 <script src="../js/editProject.js"></script>
