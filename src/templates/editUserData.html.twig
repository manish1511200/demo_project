<!DOCTYPE html>
<html lang="en">
	<head>
		<style>
			label.error {
				display: block;
				color: red;
			}
		</style>
	</head>

	<body>

		<header>
			<div class="container-fluid ">
				<div class="row justify-content-end">
<h6 class="text-center" style=" color: red">WELCOME--{{first_name}}</h6>
					<div class="col-md-10">
						{% for userId in value  %}
							<form id="edituserform" method="POST" enctype="multipart/form-data">
								<h2 class="text-center" style="color:blue">Update user Data</h2>
								<div>
									<label for="first_name">First Name:</label>
									<font color="red">*</font>
									<input type="text" class="form-control" name="first_name" id="first_name" value={{ userId.first_name}}>
								</div>
								<div>
									<label for="last_name">
										Last Name:</label>
									<font color="red">*</font>
									<input type="text" class="form-control" name="last_name" value={{ userId.last_name}} id="last_name">
								</div>
								<div>
									<label for="email">Email:</label>
									<font color="red">*</font>
									<input
									type="text" class="form-control" name="email" id="email" value="{{ userId.email }}" 
									{% if user_id == userId.id %}disabled style="background-color: red;"{% endif %}>
								</div>
								<div>
									<label for="address">Address:</label>
									<font color="red">*</font><input type="text" class="form-control" name="address" value={{ userId.address}} id="address">
								</div><br>
								<div>
									<label for="date_of_birth">Date of Birth:</label>
									<font color="red">*</font>
									<input type="date" id="date_of_birth" name="date_of_birth" value={{ userId.date_of_birth}}>
								</div><br>
								<div>
									<select class="form-control" id="user_type" name="user_type">
										{# <option value="" selected>Select User Type</option> #}
										{% for userType in showWHoleUserType %}
											<option value="{{ userType.permission_name }}">{{ userType.permission_name }}</option>
										{% endfor %}
									</select>
								</div>
							{% endfor %}

							<input type="submit" class="btn btn-primary" name="update" value="update">
						</form>
					</div>
				</div>
			</div>
		</header>
	</body>
</html></body></html> <script src="../js/edituser.js"></script>
